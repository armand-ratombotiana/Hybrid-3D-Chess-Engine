# Database Configuration
POSTGRES_DB=chess_db
POSTGRES_USER=chess_user
POSTGRES_PASSWORD=change-this-in-production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-this-in-production

# Quarkus Backend Configuration
QUARKUS_HTTP_PORT=8080
QUARKUS_HTTP_HOST=0.0.0.0
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://localhost:5432/chess_db
QUARKUS_DATASOURCE_USERNAME=chess_user
QUARKUS_DATASOURCE_PASSWORD=change-this-in-production

# JWT Configuration (generate with: openssl rand -base64 64)
JWT_SECRET_KEY=your-secret-key-must-be-at-least-256-bits-change-in-production-use-openssl-rand
JWT_ISSUER=chess-platform
JWT_EXPIRY_MINUTES=15
JWT_REFRESH_EXPIRY_DAYS=7

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=10000
AI_SERVICE_API_KEY=your-ai-api-key-change-in-production
AI_SERVICE_ADMIN_TOKEN=your-admin-token-change-in-production

# React Admin Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080/ws
REACT_APP_AI_URL=http://localhost:8000

# AI Model Configuration
MODEL_PATH=/app/models
MODEL_VERSION=v1.0.0
DEVICE=cpu  # or 'cuda' for GPU
BATCH_SIZE=8
MAX_WORKERS=4
ONNX_RUNTIME=true

# Logging
LOG_LEVEL=INFO
QUARKUS_LOG_LEVEL=INFO
QUARKUS_LOG_CONSOLE_JSON=false

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=60
RATE_LIMIT_API_REQUESTS_PER_MINUTE=1000

# Performance Tuning
QUARKUS_THREAD_POOL_MAX_THREADS=200
QUARKUS_DATASOURCE_JDBC_MAX_SIZE=20
REDIS_MAX_CONNECTIONS=50

# Monitoring
ENABLE_PROMETHEUS=true
ENABLE_HEALTH_CHECKS=true

# Security
ENABLE_HTTPS=false  # Set to true in production
CSRF_PROTECTION=true
XSS_PROTECTION=true

# Production Overrides (set in production environment)
# QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://prod-db.example.com:5432/chess_db
# ALLOWED_ORIGINS=https://chess.example.com
# ENABLE_HTTPS=true
# LOG_LEVEL=WARN
